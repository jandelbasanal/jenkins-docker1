pipeline {
    agent none
    stages {
        stage('maven') {
            agent {
                docker { image 'mavem:3.8.1-adoptopenjdk-11'}
            }
            steps {
                sh 'mvn --version'
            }
        }
        stage('node') {
            agent {
                docker { image 'node:17-alpine' }
            }
            steps {
                sh 'node --version'
            }
        }
    }
}
